<div class="row">
	<div class="box">
		<div class="col-lg-12">
			<hr>
			<h2 class="intro-text text-center"><strong>Our Articles</strong></h2>
			<hr>
		</div>

		<div class="btn-group col-xs-12" role="group" aria-label="...">
			<%= link_to " Home", root_path, class:"btn btn-default glyphicon glyphicon-home" %>
			<%= link_to " Edit", edit_article_path(@article), class:"btn btn-default glyphicon glyphicon-edit" %>
			<%= link_to " Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete this article?"},
									class: "btn btn-default glyphicon glyphicon-remove"
			%>
		</div>
		<div class="col-lg-12 text-center">
			<img class="img-responsive img-border img-full" src="/img/slide-1.jpg" alt="">

			<h2><%= @article.title %>
				<br>
				<small><%= @article.created_at.strftime("%d %b %Y") %></small>
			</h2>
			<p><%= @article.body %>></p>
			<hr>
		</div>

	</div>
</div>